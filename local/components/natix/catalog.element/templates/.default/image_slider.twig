{# Слайдер с картинками #}
{% if images %}

    <div class="productSliderBig swiper-container">
        <div class="swiper-wrapper">
            {% for image in images %}
                <div class="swiper-slide">
                    <img src="{{ image.src }}">
                </div>
            {% endfor %}
        </div>
    </div>

    {% if images|length > 1 %}
    <div class="productSliderThumbs swiper-container">
        <div class="swiper-wrapper">
            {% for image in images %}
                <div class="swiper-slide">
                    <img src="{{ image.small_src }}">
                </div>
            {% endfor %}
        </div>
        <div class="swiper-navigation">
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
    {% endif %}

{% endif %}
