{% spaceless %}
    {% if result.ITEMS %}
        <div class="topBlock__side">
            {% for banner in result['ITEMS'] %}
                {% set picture = banner['PREVIEW_PICTURE'] %}
                <div class="topBlock__sideEl">
                    <a class="sideBlock {{ banner['PROPERTIES']['THEME']['VALUE_XML_ID'] }}"
                       href="{{ banner['PROPERTIES']['LINK']['VALUE'] }}">
                        {% if picture['SRC'] %}
                            <img class="sideBlock__img" src="{{ picture['SRC'] }}">
                        {% endif %}
                        {% if banner['PREVIEW_TEXT'] %}
                            <div class="sideBlock__desc">{{ banner['PREVIEW_TEXT'] }}</div>
                        {% endif %}
                        
                        {% if banner['PROPERTIES']['ICON']['VALUE_XML_ID'] == 'star' %}
                            <div class="sideBlock__icon">
                                <svg width="27" height="27"><use xlink:href="#star"></use></svg>
                            </div>
                        {% elseif banner['PROPERTIES']['ICON']['VALUE_XML_ID'] == 'crown' %}
                            <div class="sideBlock__icon">
                                <svg width="27" height="19"><use xlink:href="#crown"></use></svg>
                            </div>
                        {% endif %}
                        
                        <div class="sideBlock__title">{{ banner['~NAME'] }}</div>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endspaceless %}
